<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="destinationsalinas.historictour"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        
        <uses-library android:name="com.google.android.maps" />
        
        <activity android:name=".Tabs"
                  android:label="@string/app_name">
                  <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PostcardActivity" android:label="Postcard">
            <intent-filter>   
            <action android:name="android.intent.action.SEND" />   
            <category android:name="android.intent.category.DEFAULT" />   
            <data android:mimeType="image/*" />
        </intent-filter>
        </activity>
        <activity android:name=".HistoricTourActivity"></activity>
        <activity android:name=".MapsActivity"></activity>
        <activity android:name=".GeneralInfoActivity"
            android:configChanges = "orientation"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".DestinationActivity"></activity>
        <activity android:name=".PostcardActivity"
            android:configChanges = "orientation"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".DestinationListActivity"></activity>
    </application>
</manifest>